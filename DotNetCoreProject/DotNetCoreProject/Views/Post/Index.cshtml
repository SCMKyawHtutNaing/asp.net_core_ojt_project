@model DotNetCoreProject.DTO.PostViewModel
@{
    ViewData["Title"] = "Post List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script type="text/javascript" src="~/js/post.js"></script>
}

@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        @TempData["successMessage"]
    </div>
}


<h2>@ViewData["Title"]</h2>
<hr />
<div class="row text-center">
    <div class="col-md-12 ">
    <label>Keyword:</label>
    <input type="text" id="searchString" />
    <button onclick="search()" class="btn btn-primary">Search</button>
    <p></p>
    <a asp-action="Create" class="btn btn-primary">
        Create
    </a>
    <a class="btn btn-primary">
        Upload
    </a>
    <a class="btn btn-primary">
        Download
    </a>
    </div>
</div>

<table id="postTable" class="table table-sm table-bordered table-striped" style="width:100%">
<thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Posted User
        </th>
        <th>
            Posted Date
        </th>
        <th>
            Operations
        </th>
    </tr>
</thead>
</table>

<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">Post Detail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <section>
                            <div class="row mb-3">
                                <label asp-for="Title" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailTitle"></p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Description" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailDescription"></p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Status" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailStatus"></p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="CreatedDate" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailCreatedDate"></p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="CreatedUser" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailCreatedUser"></p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="UpdatedDate" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailUpdatedDate"></p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="UpdatedUser" class="col-sm-4"></label>
                                <div class="col-sm-8">
                                    <p class="detail-val" id="detailUpdatedUser"></p>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Post Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <div class="row mb-3">
                            <label asp-for="Title" class="col-sm-4"></label>
                            <div class="col-sm-8">
                                <p class="detail-val" id="deleteTitle"></p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Description" class="col-sm-4"></label>
                            <div class="col-sm-8">
                                <p class="detail-val" id="deleteDescription"></p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Status" class="col-sm-4"></label>
                            <div class="col-sm-8">
                                <p class="detail-val" id="deleteStatus"></p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="modal-footer" id="deleteModalFooter">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
</div>
