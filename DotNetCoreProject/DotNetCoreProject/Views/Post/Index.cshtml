@model DotNetCoreProject.DTO.PostViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Post List</h1>
<div class="row">
    <div class="col-md-6">

    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-primary">
            Create
        </a>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Posted User
        </th>
        <th>
            Posted Date
        </th>
    </tr>
    @foreach(var item in Model.posts)
    {
<tr>
    <td>
        @item.Title
    </td>
    <td>
        @item.Description
    </td>
    <td>
        @item.PostedUser
    </td>
    <td>
        @item.PostedDate.ToString("yyyy/MM/dd")
    </td>
    <td>
        <a asp-action="Details" class="btn btn-sm btn-secondary" asp-route-id="@item.Id">
            Detail
        </a>
        <a asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.Id">
            Edit
        </a>
        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">
            Delete
        </a>
    </td>
</tr>
    }
</table>