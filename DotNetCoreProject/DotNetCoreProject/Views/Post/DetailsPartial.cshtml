@model DotNetCoreProject.DTO.PostViewModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNetCoreProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
</head>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/datatables/js/jquery.dataTables.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


<!-- Button trigger modal -->
@*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#detailsModal">
    Add Employee
</button>*@

<script>
        $(document).ready(function () {
           $('#detailsModal').modal('toggle');
        });
</script>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="employee" asp-action="create">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">Post Detail</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" asp-for="Title" readonly />
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" asp-for="Description" />
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <input type="text" class="form-control" asp-for="Status" />
                    </div>
                    <div class="form-group">
                        <label>Created Date</label>
                        <input type="text" class="form-control" asp-for="CreatedDate" />
                    </div>
                    <div class="form-group">
                        <label>Created User</label>
                        <input type="text" class="form-control" asp-for="CreatedUser" />
                    </div>
                    <div class="form-group">
                        <label>Updated Date</label>
                        <input type="text" class="form-control" asp-for="UpdatedDate" />
                    </div>
                    <div class="form-group">
                        <label>Updated User</label>
                        <input type="text" class="form-control" asp-for="UpdatedUser" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>