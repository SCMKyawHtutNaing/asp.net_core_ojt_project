<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="my-form needs-validation" novalidate>
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <section>
                <div class="row mb-3">
                    <label asp-for="Email" class="col-sm-4 col-form-label required"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="col-sm-5 btn btn-primary">Reset Password</button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
