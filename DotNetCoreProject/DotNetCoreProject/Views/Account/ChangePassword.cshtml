@model DotNetCoreProject.DTO.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

@if (ViewData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        @ViewData["errorMessage"]
    </div>
}

<h2>@ViewData["Title"]</h2>
<hr />
<form asp-controller="Account" asp-action="ChangePassword" class="my-form needs-validation" novalidate>
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <section>
                <div class="row mb-3">
                    <label asp-for="CurrentPassword" class="col-sm-4 col-form-label required"></label>
                    <div class="col-sm-8">
                        <input asp-for="CurrentPassword" class="form-control" aria-required="true" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-4 col-form-label required"></label>
                    <div class="col-sm-8">
                        <input type="password" asp-for="Password" class="form-control" aria-required="true">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label required"></label>
                    <div class="col-sm-8">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" aria-required="true">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="col-sm-5 btn btn-primary">Update Password</button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
