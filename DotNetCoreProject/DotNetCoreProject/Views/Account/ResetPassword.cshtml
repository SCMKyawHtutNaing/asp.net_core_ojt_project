@model DotNetCoreProject.DTO.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<h2>@ViewData["Title"]</h2>
<hr />
<form asp-controller="Account" asp-action="ResetPassword" class="my-form needs-validation" novalidate>
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <section>
                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />
                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-4 col-form-label required"></label>
                    <div class="col-sm-8">
                        <input type="password" asp-for="Password" class="form-control" aria-required="true">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label required"></label>
                    <div class="col-sm-8">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" aria-required="true">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="col-sm-3 btn btn-primary">Reset</button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}