@model DotNetCoreProject.DTO.LogInViewModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <div class="row mb-3">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3 offset-sm-2">
                        <input class="form-check-input" asp-for="RememberMe" />
@*                        @Html.DisplayNameFor(m => m.RememberMe)*@
                        <label asp-for="RememberMe"></label>
                    </div>
                    <div class="col-sm-3 offset-sm-2">
                        @*<a id="forgot-password" style="text-decoration:none;" asp-page="./ForgotPassword">Forgotten password?</a>*@
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <p>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register as a new user</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

